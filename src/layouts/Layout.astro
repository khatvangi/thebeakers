---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="News Website" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-gray-100">
    <header class="bg-blue-600 text-white p-4">
      <nav class="container mx-auto flex justify-between items-center">
        <a href="/" class="text-2xl font-bold">News Website</a>
        <ul class="flex space-x-4">
          <li><a href="/sciences" class="hover:underline">Sciences</a></li>
          <li><a href="/applied-sciences" class="hover:underline">Applied Sciences</a></li>
          <li><a href="/humanities" class="hover:underline">Humanities</a></li>
        </ul>
      </nav>
    </header>
    <main class="container mx-auto p-4">
      <slot />
    </main>
    <footer class="bg-gray-800 text-white p-4 mt-8">
      <div class="container mx-auto text-center">
        &copy; 2023 News Website. All rights reserved.
      </div>
    </footer>
  </body>
</html>