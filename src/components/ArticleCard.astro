---
import { formatDate } from '../utils/dateUtils';

interface Props {
  title: string;
  excerpt: string;
  slug: string;
  image: string;
  date: Date;
}

const { slug, title, excerpt, image, date } = Astro.props;
---

<div class="bg-white shadow-md rounded-lg overflow-hidden">
  <img src={image} alt={title} class="w-full h-48 object-cover" />
  <div class="p-4">
    <h2 class="text-xl font-semibold mb-2">
      <a href={`/article/${slug}`} class="text-blue-600 hover:underline">{title}</a>
    </h2>
    <p class="text-gray-600 mb-2">{excerpt}</p>
    <p class="text-sm text-gray-500">Published on {formatDate(date)}</p>
  </div>
</div>